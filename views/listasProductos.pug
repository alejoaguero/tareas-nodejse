html 
    head 
        link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous")
        script(src='/js/jquery-3.3.1.min.js')
        script(src='/js/bootstrap.min.js' crossorigin='anonymous')
        title Listas de Productos
    body
        div(class="container mt-5")

            if productos.length > 0

                each produ in productos

                    div(class="card row-md-1  m-3")
                        div(class="card-body text-center") 
                            h5(class="card-title") #{produ.name}
                            p(class="card-text") #{produ.description}
                            p(class="card-text btn-danger btn") $#{produ.price}
            else
                p(class="text-center") No hay productos
                     
            a(href="/ingresoProductos")              
                button(type="submit" href="./ingreso" class="btn btn-primary col-md-6 offset-md-3 mt-5")   Ingresar Producto








